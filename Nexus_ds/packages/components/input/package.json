{
  "name": "@nexus-ds/input",
  "version": "1.1.0",
  "description": "The input component is designed for capturing user input within a text field.",
  "keywords": [
    "input"
  ],
  
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NexusDesignSystem/nexus-ds.git",
    "directory": "packages/components/input"
  },
  "bugs": {
    "url": "https://github.com/NexusDesignSystem/nexus-ds/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "yarn build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@nexus-ds/react-utils": "workspace:*",
    "@nexus-ds/shared-icons": "workspace:*",
    "@nexus-ds/shared-utils": "workspace:*",
    "@nexus-ds/system": "workspace:*",
    "@nexus-ds/theme": "workspace:*",
    "@react-aria/focus": "^3.14.1",
    "@react-aria/interactions": "^3.18.0",
    "@react-aria/textfield": "^3.12.0",
    "@react-aria/utils": "^3.20.0",
    "@react-stately/utils": "^3.7.0",
    "@react-types/shared": "^3.20.0",
    "@react-types/textfield": "^3.8.0",
    "react-textarea-autosize": "^8.5.2"
  },
  "devDependencies": {
    "clean-package": "2.2.0",
    "react": "^18.0.0"
  },
  "clean-package": "../../../clean-package.config.json"
}
