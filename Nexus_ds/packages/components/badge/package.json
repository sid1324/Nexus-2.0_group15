{
  "name": "@nexus-ds/badge",
  "version": "1.1.0",
  "description": "Badges are used as a small numerical value or status descriptor for UI elements.",
  "keywords": [
    "badge"
  ],
  
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NexusDesignSystem/nexus-ds.git",
    "directory": "packages/components/badge"
  },
  "bugs": {
    "url": "https://github.com/NexusDesignSystem/nexus-ds/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "yarn build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@nexus-ds/system-rsc": "workspace:*",
    "@nexus-ds/theme": "workspace:*",
    "@nexus-ds/shared-utils": "workspace:*",
    "@nexus-ds/react-utils": "workspace:*"
  },
  "devDependencies": {
    "@nexus-ds/avatar": "workspace:*",
    "@nexus-ds/shared-icons": "workspace:*",
    "@nexus-ds/switch": "workspace:*",
    "clean-package": "2.2.0",
    "react": "^18.0.0"
  },
  "clean-package": "../../../clean-package.config.json"
}
