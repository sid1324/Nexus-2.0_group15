{
  "name": "@nexus-ds/select",
  "version": "1.1.0",
  "description": "A select displays a collapsible list of options and allows a user to select one of them.",
  "keywords": [
    "select"
  ],
  
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NexusDesignSystem/nexus-ds.git",
    "directory": "packages/components/select"
  },
  "bugs": {
    "url": "https://github.com/NexusDesignSystem/nexus-ds/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "yarn build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "framer-motion": ">=4.0.0"
  },
  "dependencies": {
    "@nexus-ds/aria-utils": "workspace:*",
    "@nexus-ds/listbox": "workspace:*",
    "@nexus-ds/popover": "workspace:*",
    "@nexus-ds/spinner": "workspace:*",
    "@nexus-ds/react-utils": "workspace:*",
    "@nexus-ds/scroll-shadow": "workspace:*",
    "@nexus-ds/shared-icons": "workspace:*",
    "@nexus-ds/shared-utils": "workspace:*",
    "@nexus-ds/system": "workspace:*",
    "@nexus-ds/theme": "workspace:*",
    "@nexus-ds/use-aria-button": "workspace:*",
    "@nexus-ds/use-aria-multiselect": "workspace:*",
    "@react-aria/focus": "^3.14.1",
    "@react-aria/interactions": "^3.18.0",
    "@react-aria/utils": "^3.20.0",
    "@react-aria/visually-hidden": "^3.8.4",
    "@react-types/shared": "^3.20.0"
  },
  "devDependencies": {
    "@nexus-ds/avatar": "workspace:*",
    "@nexus-ds/input": "workspace:*",
    "@nexus-ds/chip": "workspace:*",
    "framer-motion": "^10.15.1",
    "@nexus-ds/use-infinite-scroll": "workspace:*",
    "@react-stately/data": "^3.10.2",
    "clean-package": "2.2.0",
    "react": "^18.0.0"
  },
  "clean-package": "../../../clean-package.config.json"
}
