{
  "name": "@nexus-ds/{{componentName}}",
  "version": "1.1.0",
  "description": "{{description}}",
  "keywords": [
    "{{componentName}}"
  ],
  
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NexusDesignSystem/nexus-ds.git",
    "directory": "packages/{{outDir}}/{{componentName}}"
  },
  "bugs": {
    "url": "https://github.com/NexusDesignSystem/nexus-ds/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "yarn build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "dependencies": {
    "@nexus-ds/system": "workspace:*",
    "@nexus-ds/theme": "workspace:*",
    "@nexus-ds/shared-utils": "workspace:*",
    "@nexus-ds/react-utils": "workspace:*"
  },
  "devDependencies": {
    "clean-package": "2.2.0",
    "react": "^18.0.0"
  },
  "clean-package": "../../../clean-package.config.json"
}
